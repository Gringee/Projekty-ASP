@model List<Photo>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Spis Zdjęć</h1>
<a class="btn btn-primary" asp-controller="Photo" asp-action="Create">Dodaj zdjęcie</a>
@if (Model != null && Model.Count > 0){
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Opis)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Aparat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Autor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Resolution)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Format)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Priority)
                </th>
                <th>
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Photo item in @Model)
            {
                <tr>
                    <td>
                        @item.Data
                    </td>
                    <td>
                        @item.Opis
                    </td>
                    <td>
                        @item.Aparat
                    </td>
                    <td>
                        @item.Autor
                    </td>
                    <td>
                        @item.Resolution
                    </td>
                    <td>
                        @item.Format
                    </td>
                    <td>
                        @item.Priority.GetDisplayName()
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id=@item.Id>Edytuj</a>
                        <a asp-action="Details" asp-route-id=@item.Id>Szczegóły</a>
                        <a asp-action="Delete" asp-route-id=@item.Id>Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}